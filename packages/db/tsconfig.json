{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext", // Added to support ES Modules
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true // Added to enable ES Module interop
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
