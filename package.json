{
  "name": "rupeerush",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo dev --filter=\"./apps/user-app\"",
    "dev:hook": "turbo dev --filter=\"./apps/webhook\"",
    "db:generate": "cd packages/db && npx prisma generate && npm run db:seed && cd ../..",
    "db:prisma": "cd packages/db && npm run db:migrate && cd ../..",
    "db:docker": "docker run -e POSTGRES_PASSWORD=mysecretpassword -d -p 3333:5432 postgres"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.7.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
