{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext", // Added to support ES Modules
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true, // Added to enable ES Module interop
    "sourceMap": true,
    "strict": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
