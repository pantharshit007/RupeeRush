{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "NODE_ENV", "WEBHOOK_*", "UPSTASH_REDIS_REST_*", "USE_ADAPTER"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "user-app#build": {
      "dependsOn": ["^build"],
      "env": ["AUTH_*", "RESEND_API_KEY", "NEXT_PUBLIC_*", "CACHE_TTL", "DEMO_*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "webhook#build": {
      "dependsOn": ["^build"],
      "env": ["BANK_API_URL", "FE_URL"],
      "outputs": ["dist/**"]
    },
    "bank-api#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "bank-page#build": {
      "dependsOn": ["^build"],
      "env": ["BANK_API_URL"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [".env*"]
    },
    "type-check": {
      "cache": false,
      "outputs": []
    }
  }
}
