{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "NODE_ENV", "REDIS_URL", "WEBHOOK_SECRET", "WEBHOOK_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "user-app#build": {
      "dependsOn": ["^build"],
      "env": ["AUTH_*", "RESEND_API_KEY"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "webhook#build": {
      "dependsOn": ["^build"],
      "env": ["WEBHOOK_*", "BANK_API_URL"],
      "outputs": ["dist/**"]
    },
    "bank-api#build": {
      "dependsOn": ["^build"],
      "env": ["BANK_API_URL"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [".env*"]
    },
    "type-check": {
      "cache": false,
      "outputs": []
    }
  }
}
